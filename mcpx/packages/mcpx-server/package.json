{
  "name": "mcpx-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "npx tsx --watch src/index.ts",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest /src --config jest.config.cjs",
    "test:watch": "node --experimental-vm-modules ../../node_modules/jest/bin/jest --config jest.config.cjs --watch",
    "it:prepare": "npm --prefix ../testkit-mcp-server run build",
    "it:run": "node --env-file=.it.env --experimental-vm-modules ../../node_modules/jest/bin/jest /it --runInBand --config jest.config.cjs",
    "it:teardown": "echo \"No teardown needed.\"; exit 0",
    "serve": "node dist/index.js",
    "build": "tsc --build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --check \"./**/*.{ts,tsx,js,json,jsx,css,scss,md}\"",
    "prettier:fix": "prettier --write \"./**/*.{ts,tsx,js,json,jsx,css,scss,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
