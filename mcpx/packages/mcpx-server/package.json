{
  "name": "mcpx-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "npx tsx --watch src/index.ts",
    "test": "jest ./src --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "it:prepare": "npm install --prefix ../../testkit-mcp-server && npm --prefix ../../testkit-mcp-server run build && docker compose -f it/docker-compose.it.test.yml up -d --wait",
    "it:run": "dotenv -e .it.env -- jest ./it --runInBand --config jest.config.cjs",
    "it:run:file": "dotenv -e .it.env -- jest --runInBand --config jest.config.cjs",
    "it:teardown": "docker compose -f it/docker-compose.it.test.yml down",
    "serve": "node dist/index.js",
    "build": "tsc --build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --check \"./**/*.{ts,tsx,js,json,jsx,css,scss,md}\"",
    "prettier:fix": "prettier --write \"./**/*.{ts,tsx,js,json,jsx,css,scss,md}\"",
    "check:all": "node ../../../scripts/check-all.js",
    "check:package": "node ../../../scripts/check-all.js --current",
    "tokens:clean": "rm -rf ./.mcpx/tokens",
    "build:deps:one": "cd ../.. && npm run build:deps:one"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mcpx/shared-model": "1.0.0",
    "@mcpx/toolkit-core": "1.0.0",
    "@mcpx/webapp-protocol": "1.0.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-prometheus": "^0.202.0",
    "@opentelemetry/sdk-metrics": "^2.0 .1",
    "@types/cors": "^2.8.19",
    "@types/luxon": "^3.7.1",
    "cors": "^2.8.5",
    "docker-cli-js": "^2.10.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "js-tiktoken": "^1.0.21",
    "luxon": "^3.7.1",
    "semver": "^6.3.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@jest/globals": "^29.7.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/semver": "^7.7.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.26.0",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  }
}
