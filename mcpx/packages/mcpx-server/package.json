    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "eslint": "^9.26.0",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
